{
  "name": "data-in-globe",
  "version": "0.0.0-development",
  "description": "Simple and easy way to manage global states.",
  "scripts": {
    "test": "jest",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "clean": "rm -rf ./dist/*",
    "build:esm": "tsc -b tsconfig.esm.json",
    "build:cjs": "tsc -b tsconfig.cjs.json",
    "lint": "eslint&&prettier --check **/src/**",
    "prepack": "npm run build",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Juyeong-Byeon/data-in-globe.git"
  },
  "keywords": [
    "data",
    "global",
    "store"
  ],
  "author": "juyeong",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Juyeong-Byeon/data-in-globe/issues"
  },
  "homepage": "https://github.com/Juyeong-Byeon/data-in-globe#readme",
  "dependencies": {
    "lodash": "^4.17.21",
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.197",
    "@types/react": "^18.2.21",
    "@types/use-sync-external-store": "^0.0.3",
    "eslint": "^8.34.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.2",
    "prettier": "^2.8.4",
    "semantic-release": "^21.1.1",
    "typescript": "^4.9.5"
  },
  "main": ".dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/types/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "./dist/**/*",
    "./src/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
